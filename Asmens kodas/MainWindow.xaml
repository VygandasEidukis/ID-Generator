<Window
    x:Class="Asmens_kodas.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Asmens_kodas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Border
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1">
            <StackPanel Margin="20">
                <TextBlock Text="Date of birth" />
                <DatePicker x:Name="BirthDate" />
                <StackPanel Orientation="Horizontal">
                    <RadioButton
                        x:Name="RadioMale"
                        Margin="10"
                        Content="Male" />
                    <RadioButton
                        x:Name="RadioFemale"
                        Margin="10"
                        Content="Female" />
                </StackPanel>
                <TextBlock Text="Eiles numeris" />
                <TextBox x:Name="EilesNr" Margin="0,5,0,5" />
                <Button Click="Button_Click" Content="Create ID" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
